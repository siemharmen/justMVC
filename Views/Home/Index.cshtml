@{
    ViewData["Title"] = "Loading";
}
@model ReversiMVC.Models.Speler

<div class="text-center">
    <h1 class="display-4">Loading</h1>
</div>

<div class="col-md-4" style="display:none">
    <form asp-controller="Spelers" asp-action="CheckCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Guid" class="control-label"></label>
            <input asp-for="Guid" value="@User.Identity.Name" class="form-control" />
            <span asp-validation-for="Guid" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Naam" class="control-label"></label>
            <input asp-for="Naam" value="@User.Identity.Name" class="form-control" />
            <span asp-validation-for="Naam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AantalGewonnen" class="control-label"></label>
            <input asp-for="AantalGewonnen" value=0 class="form-control" />
            <span asp-validation-for="AantalGewonnen" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AantalVerloren" class="control-label"></label>
            <input asp-for="AantalVerloren" value=0 class="form-control" />
            <span asp-validation-for="AantalVerloren" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AantalGelijk" class="control-label"></label>
            <input asp-for="AantalGelijk" value=0 class="form-control" />
            <span asp-validation-for="AantalGelijk" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input id="button" type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>


